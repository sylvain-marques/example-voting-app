pipeline{

  agent none

stages{
  
  stage('build'){
    agent{
      docker{
        image 'node:8.16.0-alpine'
      }
    }
    when{
     changeset "**/result/**"
    }
    steps{
      echo 'building result app'
      dir('result'){
        sh 'npm install'
      }
    }
  }

  stage('test'){
    agent{
      docker{
        image 'node:8.16.0-alpine'
      }
    }
    when{
     changeset "**/result/**"
    }
    steps{
      echo 'running unit tests on result app'
        dir('result'){
          sh 'npm install'
          sh 'mpm test'
        }
      }
    }

  stage('docker-package'){
    agent any
    when{
      changeset "**/result/**"
      branch 'master'
    }
    steps{
      echo 'Packaging worker app with docker'
      script{
         docker.withRegistry('https://index.docker.io/v1/', 'dockerlogin') {
           def workerImage = docker.build("sylvainmarques/worker:v${env.BUILD_ID}", "./result")
           workerImage.push()
           workerImage.push("latest")
           workerImage.push("${env.BRANCH_NAME}")
         }
      }
    }
  }
}

post{
  always{
    echo 'the job is complete'
    }
  } 
}

