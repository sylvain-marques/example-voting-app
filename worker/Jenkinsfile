pipeline {
    agent any
    tools{
      maven 'maven 3.6.1'
    }
    
    stages {
        stage('build') {
            steps {
                echo 'compiling worker app'
                dir('worker'){
                  sh 'mvn compile'
                }
            }
        }
        
        stage('test job') {
            steps {
                echo 'Running uniit tests on worker app'
                dir('worker'){
                  sh 'mvn clean test'
            }
        }
        
        stage('package') {
            steps {
                echo 'packaging worker app'
                dir('worker'){
                  sh 'mvn package'
            }
        }
    }
    
    post{
        always{
            echo 'Build pipeline is completed for worker app.. including 3 jobs or stages'
        }
    }
}

